<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <OutputType>Library</OutputType>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <!-- Disable AOT for test projects -->
    <IsAotCompatible>false</IsAotCompatible>
    <EnableTrimAnalyzer>false</EnableTrimAnalyzer>
    <EnableSingleFileAnalyzer>false</EnableSingleFileAnalyzer>
    <EnableAotAnalyzer>false</EnableAotAnalyzer>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BenchmarkDotNet" />
    <PackageReference Include="BenchmarkDotNet.Annotations" />
    <PackageReference Include="Castle.Core" />
    <PackageReference Include="Microsoft.Extensions.Options" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" />
    <PackageReference Include="XmlFix.Analyzers">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../../src/Backends/DotCompute.Backends.CPU/DotCompute.Backends.CPU.csproj" />
    <ProjectReference Include="../../../src/Core/DotCompute.Abstractions/DotCompute.Abstractions.csproj" />
    <ProjectReference Include="../../../src/Core/DotCompute.Core/DotCompute.Core.csproj" />
    <ProjectReference Include="..\..\Shared\DotCompute.Tests.Common\DotCompute.Tests.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Xunit" />
    <Using Include="FluentAssertions" />
    <Using Include="NSubstitute" />
    <Using Include="Microsoft.Extensions.Logging" />
    <Using Include="Microsoft.Extensions.Options" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude old problematic test files with API mismatches -->
    <Compile Remove="CpuKernelExecutorTests.cs" /> <!-- CpuKernelExecutor is internal -->
    <Compile Remove="PerformanceTests.cs" />
    <Compile Remove="CpuAcceleratorComprehensiveTests.cs" /> <!-- API mismatches with old test code -->
    <Compile Remove="CpuBackendPerformanceTests.cs" /> <!-- API mismatches -->
    <Compile Remove="CpuBackendTests.cs" /> <!-- API mismatches -->
    <Compile Remove="CpuBackendStressTests.cs" /> <!-- API mismatches -->
    <Compile Remove="CpuAcceleratorSimpleTests.cs" /> <!-- API mismatches -->
    <Compile Remove="CpuAcceleratorTestsClean.cs" /> <!-- API mismatches -->
    <Compile Remove="CpuAcceleratorTests.cs" /> <!-- Uses Moq instead of NSubstitute -->
    <Compile Remove="CpuMemoryManagerTests.cs" /> <!-- Uses Moq instead of NSubstitute -->
    <Compile Remove="CpuKernelCompilerTests.cs" /> <!-- Uses Moq instead of NSubstitute -->
  </ItemGroup>

  <!-- Test framework packages are included from tests/Directory.Build.targets -->

</Project>