<Project>
  <Import Project="../src/Directory.Build.props" />

  <PropertyGroup>
    <!-- Relax some rules for test projects -->
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <WarningsNotAsErrors />
    
    <!-- Disable AOT analysis for tests -->
    <IsAotCompatible>false</IsAotCompatible>
    <EnableAotAnalyzer>false</EnableAotAnalyzer>
    
    <!-- Suppress some analyzer rules for tests -->
    <NoWarn>$(NoWarn);IDE0040;IDE0011;CA1822;CA1859;CA1308;CA1869;IL2026;IL3050</NoWarn>
  </PropertyGroup>
</Project>