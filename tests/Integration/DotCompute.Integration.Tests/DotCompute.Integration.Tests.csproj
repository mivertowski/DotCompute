<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <!-- Suppress code analysis warnings for test projects -->
    <NoWarn>$(NoWarn);CS0067;CA1063;CA2000;CA1852;IDE0011;IDE0044;xUnit1031;CA1861;IDE2001;CA1034;IDE0040;CA1305;CA1806;IDE0059;CA2263</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.8" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.8" />
    <!-- Test packages are included via Directory.Build.targets -->
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\DotCompute.Core\DotCompute.Core.csproj" />
    <ProjectReference Include="..\..\src\DotCompute.Abstractions\DotCompute.Abstractions.csproj" />
    <ProjectReference Include="..\..\src\DotCompute.Memory\DotCompute.Memory.csproj" />
    <ProjectReference Include="..\..\src\DotCompute.Plugins\DotCompute.Plugins.csproj" />
    <ProjectReference Include="..\..\plugins\backends\DotCompute.Backends.CPU\DotCompute.Backends.CPU.csproj" />
    <ProjectReference Include="..\DotCompute.Tests.Common\DotCompute.Tests.Common.csproj" />
    <ProjectReference Include="..\DotCompute.Tests.Implementations\DotCompute.Tests.Implementations.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="TestKernels\**\*.cl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="TestKernels\**\*.cu">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="TestKernels\**\*.metal">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="TestData\**\*">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>