<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningsNotAsErrors>CA1014</WarningsNotAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <!-- Test packages provided by tests/Directory.Build.targets -->
    <!-- Microsoft.NET.Test.Sdk, xunit, xunit.runner.visualstudio, coverlet.collector automatically included -->
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="Microsoft.Extensions.Logging" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../../src/Extensions/DotCompute.Linq/DotCompute.Linq.csproj" />
    <ProjectReference Include="../../../src/Runtime/DotCompute.Runtime/DotCompute.Runtime.csproj" />
    <ProjectReference Include="../../../src/Core/DotCompute.Abstractions/DotCompute.Abstractions.csproj" />
    <ProjectReference Include="../../../tests/Shared/DotCompute.Tests.Common/DotCompute.Tests.Common.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Xunit" />
  </ItemGroup>

</Project>
