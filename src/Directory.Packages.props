    <PackageVersion Include="Meziantou.Analyzer" Version="2.0.*" />
    <PackageVersion Include="SonarAnalyzer.CSharp" Version="9.21.*" />
    <PackageVersion Include="StyleCop.Analyzers" Version="1.2.0-beta.556" />
    <PackageVersion Include="Roslynator.Analyzers" Version="4.10.*" />
    
    <!-- Build Tools -->
    <PackageVersion Include="Microsoft.SourceLink.GitHub" Version="8.0.*" />
    <PackageVersion Include="MinVer" Version="5.0.*" />
    <PackageVersion Include="Nerdbank.GitVersioning" Version="3.6.*" />
  </ItemGroup>

  <!-- Version Overrides for Compatibility -->
  <ItemGroup>
    <!-- Override transitive dependencies if needed -->
    <PackageVersion Include="System.Text.Json" Version="9.0.0-preview.*" />
    <PackageVersion Include="System.Text.Encodings.Web" Version="9.0.0-preview.*" />
  </ItemGroup>
